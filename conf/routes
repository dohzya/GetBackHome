# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           com.dohzya.gethomeback.controllers.Application.index
GET     /game/:id                   com.dohzya.gethomeback.controllers.Game.game(id: String)
GET     /game/:id/zone/:x/:y        com.dohzya.gethomeback.controllers.Game.getZone(id: String, x: Int, y: Int)

GET     /ws                         com.dohzya.gethomeback.controllers.Game.ws

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
